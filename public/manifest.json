{
  "name": "Xpet Demo",
  "description": "beta",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.zhihu.com/*"],
      "js": ["game.js"],
      "css": ["game.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/**"],
      "matches": ["file://*/*", "http://*/*", "https://*/*"]
    }
  ]
}
